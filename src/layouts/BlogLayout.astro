---
import BaseHead from '@/components/BaseHead.astro';
import BlogHeader from '@/components/BlogHeader.astro';
import BlogPost from '@/components/BlogPost.astro';

const { content } = Astro.props;
const { title, excerpt, publishDate, author, heroImage, permalink, alt } = content;
---

<html lang={content.lang || 'en'}>
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"/>
		<BaseHead {title} {excerpt} {permalink} />
		<style is:global>
		code {
			counter-reset: step !important;
			counter-increment: step 0 !important;
		}

		code .line::before {
			content: counter(step);
			counter-increment: step;
			width: 1rem;
			margin-right: 1.5rem;
			display: inline-block;
			text-align: right;
			color: white;
		}
		</style>
	</head>

	<body>
		<BlogHeader />
		<div class="wrapper">
			<BlogPost {title} {author} {heroImage} {publishDate} {alt}>
				<slot />
			</BlogPost>
		</div>
	</body>
</html>
